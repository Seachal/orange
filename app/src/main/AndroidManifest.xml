<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.zhuzichu.orange">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 下载时不提示通知栏 -->
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION"/>
    <uses-permission android:name="android.permission.MANAGE_LOCATION_POLICY"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- 添加如下权限，以便使用更多的第三方SDK和更精准的统计数据 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- iBeancon功能所需权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
            tools:ignore="GoogleAppIndexingWarning"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            tools:replace="android:allowBackup"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            android:name=".App">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <meta-data
                android:name="design_width_in_dp"
                android:value="400"/>

        <meta-data
                android:name="design_height_in_dp"
                android:value="800"/>

        <activity android:name=".main.activity.MainActivity"
                  android:resizeableActivity="false"
                  android:windowSoftInputMode="adjustPan"
                  android:screenOrientation="portrait"
                  android:configChanges="screenLayout|orientation"/>

        <activity android:name=".LauncherActivity"
                  android:launchMode="singleTask"
                  android:theme="@style/LauncherTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.zhuzichu.orange.ui.camerax.CameraActivity"
                  android:theme="@style/AppTransparentTheme"/>

        <activity android:name="com.zhuzichu.orange.ui.picture.PictureActivity"
                  android:theme="@style/AppTransparentTheme"/>

        <activity android:name=".ui.file.FileActivity"
                  android:theme="@style/AppTransparentTheme"/>

        <activity
                android:name=".flutter.BallGameFlutterActivity"
                android:launchMode="singleTop"
                android:theme="@style/FlutterTheme"
                android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
                android:hardwareAccelerated="true"
                android:windowSoftInputMode="adjustResize">
            <meta-data
                    android:name="io.flutter.app.android.SplashScreenUntilFirstFrame"
                    android:value="true"/>
        </activity>

        <service android:name=".OrangeService"
                 android:enabled="true"
                 android:exported="true"
                 android:process=":orange_remote"/>

        <receiver android:name=".receiver.DownloadReceiver"
                  android:enabled="true"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>