<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.zhuzichu.orange.R"/>
        <variable name="viewModel" type="com.zhuzichu.orange.setting.viewmodel.EditAvatarViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@{viewModel.color.windowBackground}">

        <com.zhuzichu.mvvm.view.imagezoom.ImageViewTouch
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>
</layout>
