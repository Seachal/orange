<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable name="item" type="com.zhuzichu.orange.home.viewmodel.ItemHomeClassViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:background="@{item.color.contentBackground}"
                  android:clickable="true"
                  android:visibility="@{item.list.size()==0?View.GONE:View.VISIBLE}"
                  android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/next_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{item.title}"
                    tools:text="男装"
                    app:textColor="@{item.color.colorPrimary}"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
            />

            <View android:layout_width="match_parent"
                  android:layout_centerVertical="true"
                  android:background="@{item.color.colorPrimary}"
                  android:layout_toStartOf="@+id/next_name"
                  android:layout_marginStart="30dp"
                  android:layout_height="1dp"/>

            <View android:layout_width="match_parent"
                  android:layout_centerVertical="true"
                  android:background="@{item.color.colorPrimary}"
                  android:layout_toEndOf="@id/next_name"
                  android:layout_marginEnd="30dp"
                  android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>
</layout>
