<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable name="viewModel" type="com.zhuzichu.orange.mine.viewmodel.SettingUserViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@{viewModel.color.windowBackground}">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlEnablePureScrollMode="true"
                app:srlDragRate="0.75">

            <ScrollView android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:textColor="@{viewModel.color.textColorSecond}"
                            android:textSize="14sp"
                            android:text="个人信息"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="10dp"/>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@drawable/divider"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@{viewModel.color.contentBackground}"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:paddingRight="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="昵称"
                                android:textSize="12sp"
                                app:textColor="@{viewModel.color.textColorSecond}"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="10"
                                android:text="@{viewModel.global.userInfo.nickname}"
                                app:textColor="@{viewModel.color.textColorPrimary}"
                                android:textSize="12sp"/>

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@mipmap/ic_arrow"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@drawable/divider"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@{viewModel.color.contentBackground}"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:paddingRight="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="性别"
                                android:textSize="12sp"
                                app:textColor="@{viewModel.color.textColorSecond}"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="10"
                                app:bindSex="@{viewModel.global.userInfo.sex}"
                                app:textColor="@{viewModel.color.textColorPrimary}"
                                android:textSize="12sp"/>

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@mipmap/ic_arrow"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@drawable/divider"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@{viewModel.color.contentBackground}"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:paddingRight="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="手机号"
                                android:textSize="12sp"
                                app:textColor="@{viewModel.color.textColorSecond}"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="10"
                                android:text="@{viewModel.global.userInfo.phone}"
                                app:textColor="@{viewModel.color.textColorPrimary}"
                                android:textSize="12sp"/>

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@mipmap/ic_arrow"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@drawable/divider"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@{viewModel.color.contentBackground}"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:paddingRight="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="所在地"
                                android:textSize="12sp"
                                app:textColor="@{viewModel.color.textColorSecond}"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="10"
                                android:text="未设置"
                                app:textColor="@{viewModel.color.textColorPrimary}"
                                android:textSize="12sp"/>

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@mipmap/ic_arrow"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@drawable/divider"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@{viewModel.color.contentBackground}"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:paddingRight="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="个人简介"
                                android:textSize="12sp"
                                app:textColor="@{viewModel.color.textColorSecond}"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="10"
                                android:text="未设置"
                                app:textColor="@{viewModel.color.textColorPrimary}"
                                android:textSize="12sp"/>

                        <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@mipmap/ic_arrow"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@drawable/divider"/>


                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="0dp"
                                  android:layout_weight="1"
                                  android:orientation="vertical"
                                  android:background="@{viewModel.color.contentBackground}">

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                app:cardCornerRadius="5dp"
                                android:layout_marginRight="30dp"
                                app:onClickCommand="@{viewModel.onClickLogout}"
                                android:animateLayoutChanges="true"
                                android:layout_marginLeft="30dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="退出当前账号"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    app:textColor="@{viewModel.color.contentBackground}"
                                    android:visibility="@{viewModel.global.isLogin?View.VISIBLE:View.GONE}"
                                    android:textStyle="bold"
                                    android:padding="10dp"
                                    android:background="@{viewModel.color.colorPrimary}"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</layout>
