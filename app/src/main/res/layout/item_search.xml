<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.zhuzichu.orange.R"/>
        <variable name="item" type="com.zhuzichu.orange.search.viewmodel.ItemResultViewModel"/>
    </data>
    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            tools:layout_width="200dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
            <com.zhuzichu.mvvm.view.layout.SquareRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:url="@{item.searchBean.itempic}"
                        app:placeholderRes="@{R.mipmap.ic_silent_plate_mix}"
                        tools:src="@drawable/ic_launcher_background"/>

            </com.zhuzichu.mvvm.view.layout.SquareRelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@{item.searchBean.itemshorttitle}"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/colorPrimaryText"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:minLines="2"
                        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/itemendprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="¥ 123123123123123"
                            android:text='@{@string/rmb+item.searchBean.itemendprice}'
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:maxEms="6"
                            android:ellipsize="end"
                            android:textColor="@color/colorRedPrimary"
                            android:textStyle="bold|italic"
                    />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/itemprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strikethrough='@{item.searchBean.itemprice}'
                            tools:text="123123123123123123"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:maxEms="6"
                            android:ellipsize="end"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/itemendprice"
                            android:textColor="@color/colorHint"
                    />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@{item.searchBean.itemsale+@string/personal_payment}'
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:maxEms="6"
                            tools:text="销量 213132"
                            android:layout_below="@+id/itemendprice"
                            android:ellipsize="end"
                            android:textColor="@color/colorSecondText"
                    />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:background="@mipmap/bg_coupon_sc9"
                            tools:text="2525252525"
                            android:maxLines="1"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/itemprice"
                            android:ellipsize="end"
                            android:text="@{item.searchBean.couponmoney+@string/rmb}"
                            android:gravity="center"
                            android:textColor="@color/white"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
