<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.zhuzichu.orange.R"/>
        <variable name="item" type="com.zhuzichu.orange.search.ItemSearchViewModel"/>
    </data>
    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
            <com.zhuzichu.mvvm.view.layout.SquareRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:url="@{item.searchBean.itempic}"
                        app:placeholderRes="@{R.mipmap.ic_silent_plate_mix}"
                        tools:src="@drawable/ic_launcher_background"/>

            </com.zhuzichu.mvvm.view.layout.SquareRelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@{item.searchBean.itemshorttitle}"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/colorPrimaryText"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/itemprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strikethrough='@{"原价:"+item.searchBean.itemprice}'
                            tools:text="原价:123"
                            android:textSize="14sp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorSecondText"
                    />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="券后:123"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/itemprice"
                            android:text='@{"券后:"+item.searchBean.itemendprice}'
                            android:textSize="16sp"
                            android:textColor="@color/colorRedPrimary"
                            android:textStyle="bold|italic"
                    />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
