<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.zhuzichu.orange.R"/>
        <variable name="item" type="com.zhuzichu.orange.shopdetail.viewmodel.ItemShopDetalBannerViewModel"/>
    </data>

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:onClickCommand="@{item.onItemClick}"
            app:isScale="@{true}"
            app:cardCornerRadius="5dp"
            app:widthPadding="@{80}"
            app:widthHeightRatio="@{1f}">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:placeholderRes="@{R.mipmap.ic_silent_plate_max}"
                android:scaleType="centerCrop"
                app:url="@{item.imageUrl}"/>
    </androidx.cardview.widget.CardView>
</layout>