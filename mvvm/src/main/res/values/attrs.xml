<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="textColor" format="color"/>

    <declare-styleable name="CircularImageView">
        <attr name="civ_border" format="boolean"/>
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_circle_color" format="color"/>
        <attr name="civ_shadow" format="boolean"/>
        <attr name="civ_shadow_color" format="color"/>
        <attr name="civ_shadow_radius" format="float"/>
        <attr name="civ_shadow_gravity">
            <flag name="center" value="1"/>
            <flag name="top" value="2"/>
            <flag name="bottom" value="3"/>
            <flag name="start" value="4"/>
            <flag name="end" value="5"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AutoPlayRecyclerView">
        <attr name="timeInterval" format="integer"/>
        <attr name="direction" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CardView">
        <attr name="cardBackground" format="color"/>
    </declare-styleable>

    <declare-styleable name="CheckBox">
        <attr name="onCheckedChangedCommand" format="reference"/>
        <attr name="isChecked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circleViewColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="EditText">
        <attr name="disableInput" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="Chip">
        <attr name="onCloseIconCommand" format="reference"/>
    </declare-styleable>

    <declare-styleable name="View">
        <attr name="isGone" format="boolean"/>
        <attr name="onClickCommand"/>
        <attr name="onLongClickCommand"/>
        <attr name="onFocusChangeCommand"/>
        <attr name="onTouchCommand"/>
        <attr name="isThrottleFirst"/>
        <attr name="currentView"/>
        <attr name="isScale" format="boolean"/>
        <attr name="widthHeightRatio" format="float"/>
        <attr name="widthPadding" format="dimension"/>
        <attr name="isScreenW" format="boolean"/>
        <attr name="enablePaddingStatusbarHeight" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SmartRefreshLayout">
        <attr name="onRefreshCommand"/>
        <attr name="onLoadMoreCommand"/>
        <attr name="primaryColor" format="color"/>
        <attr name="accentColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TextView">
        <attr name="strikethrough" format="string"/>
        <attr name="fontPath" format="string"/>
        <attr name="fromHtml" format="string"/>
        <attr name="bindSex" format="integer"/>
        <attr name="textColor"/>
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="url"/>
        <attr name="request_width" format="integer"/>
        <attr name="request_height" format="integer"/>
        <attr name="placeholderRes" format="reference|color"/>
        <attr name="onSuccessCommand" format="reference"/>
        <attr name="onFailureCommand" format="reference"/>
        <attr name="srcColor" format="color"/>
        <attr name="aspecRatio" format="float"/>
        <attr name="margin" format="integer"/>
        <attr name="enableWhiteToAlpha" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference"/>
        <attr name="msv_emptyView" format="reference"/>
        <attr name="msv_errorView" format="reference"/>
        <attr name="viewState" format="integer"/>
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0"/>
            <enum name="error" value="1"/>
            <enum name="empty" value="2"/>
            <enum name="loading" value="3"/>
        </attr>
        <attr name="msv_animateViewChanges" format="boolean"/>
        <attr name="onErrorCommand" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RecyclerView" parent="AdapterView">
        <attr name="lineManager" format="reference"/>
        <attr name="itemBinding" format="reference"/>
        <attr name="diffConfig" format="reference"/>
        <attr name="onScrollChangeCommand" format="reference"/>
        <attr name="onScrollStateChangedCommand" format="reference"/>
        <attr name="gridLayoutManager" format="integer"/>
        <attr name="spanSizeLookup" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AdapterView">
        <attr name="itemView"/>
        <attr name="items"/>
        <attr name="adapter"/>
        <attr name="dropDownItemView" format="reference"/>
        <attr name="itemIds" format="reference"/>
        <attr name="itemIsEnabled" format="reference"/>
        <attr name="onScrollStateChangedCommand"/>
        <attr name="onScrollChangeCommand"/>
        <attr name="onLoadMoreCommand" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BottomNavigationView">
        <attr name="textColor"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="iconColor" format="color"/>
        <attr name="selectedIconColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RibbonView">
        <attr name="ribbon_drawable" format="reference"/>
        <attr name="ribbon_background_color" format="color"/>
        <attr name="ribbon_ribbonRadius" format="dimension"/>
        <attr name="ribbon_rotation" format="integer"/>
        <attr name="ribbon_padding_left" format="dimension"/>
        <attr name="ribbon_padding_top" format="dimension"/>
        <attr name="ribbon_padding_right" format="dimension"/>
        <attr name="ribbon_padding_bottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ShimmerRibbonView">
        <attr name="shimmer_ribbon_text" format="string"/>
        <attr name="shimmer_ribbon_textColor" format="color"/>
        <attr name="shimmer_ribbon_textSize" format="dimension"/>
        <attr name="shimmer_ribbon_textStyle" format="enum">
            <enum name="bold" value="0"/>
            <enum name="italic" value="1"/>
        </attr>
        <attr name="shimmer_ribbon_drawable" format="reference"/>
        <attr name="shimmer_ribbon_background_color" format="color"/>
        <attr name="shimmer_ribbon_ribbonRadius" format="dimension"/>
        <attr name="shimmer_ribbon_rotation" format="integer"/>
        <attr name="shimmer_ribbon_padding_left" format="dimension"/>
        <attr name="shimmer_ribbon_padding_top" format="dimension"/>
        <attr name="shimmer_ribbon_padding_right" format="dimension"/>
        <attr name="shimmer_ribbon_padding_bottom" format="dimension"/>
        <attr name="shimmer_ribbon_maxLines" format="integer"/>
    </declare-styleable>
    <declare-styleable name="RibbonLayout">
        <attr name="ribbonLayout_header_align" format="enum">
            <enum name="left" value="8388611"/>
            <enum name="right" value="8388613"/>
            <enum name="center" value="17"/>
        </attr>
        <attr name="ribbonLayout_bottom_align" format="enum">
            <enum name="left" value="8388611"/>
            <enum name="right" value="8388613"/>
            <enum name="center" value="17"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="DotsIndicator">
        <attr format="dimension" name="dot_width"/>
        <attr format="dimension" name="dot_height"/>
        <attr format="dimension" name="dot_margin"/>
        <attr format="reference" name="dot_drawable"/>
        <attr format="reference" name="dot_drawable_unselected"/>
        <attr format="color" name="dot_tint"/>
        <attr format="reference" name="dots_animator"/>
        <attr format="reference" name="dots_animator_reverse"/>
        <attr format="enum" name="dots_orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="dots_gravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
    </declare-styleable>
</resources>